<Window x:Class="KdxDesigner.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KdxDesigner.Views"
        xmlns:converters="clr-namespace:KdxDesigner.Utils.Converters"
        mc:Ignorable="d"
        Title="KDX Designer - サインイン" 
        Height="920" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="KDX Designer" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="ログイン"
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Grid Grid.Row="1" Margin="40,30">
            <StackPanel VerticalAlignment="Center">
                <!-- Sign In / Sign Up Toggle -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <RadioButton x:Name="SignInMode" Content="サインイン" IsChecked="True" Margin="0,0,20,0" 
                                FontSize="14" GroupName="AuthMode" Foreground="#333333" FontWeight="SemiBold"/>
                    <RadioButton x:Name="SignUpMode" Content="新規登録" FontSize="14" GroupName="AuthMode" 
                                Foreground="#333333" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Email Authentication Section -->
                <Border Background="White" 
                       CornerRadius="8" 
                       Padding="25,20"
                       BorderBrush="#DDDDDD"
                       BorderThickness="1"
                       Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock TextAlignment="Center"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="メールアドレスでサインイン"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SignUpMode, Path=IsChecked}" Value="True">
                                            <Setter Property="Text" Value="新規アカウント作成"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Email Input -->
                        <TextBlock Text="メールアドレス" 
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                Height="45"
                                Padding="15,12"
                                FontSize="14"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Margin="0,0,0,15">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Confirm Password Input (Only for Sign Up) -->
                        <TextBlock Text="パスワード（確認）" 
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,5"
                                  Visibility="{Binding ElementName=SignUpMode, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                    Height="45"
                                    Padding="15,12"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,12"
                                    Visibility="{Binding ElementName=SignUpMode, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Password Input -->
                        <TextBlock Text="パスワード" 
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                    Height="45"
                                    Padding="15,12"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,15">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Email Sign In/Up Button (Normal Mode) -->
                        <Button Height="50"
                               Background="#2196F3"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Visibility="{Binding IsPasswordResetMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                               IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="サインイン"/>
                                    <Setter Property="Command" Value="{Binding SignInWithEmailCommand}"/>
                                    <Setter Property="CommandParameter" Value="{Binding ElementName=PasswordBox}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="6"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1976D2"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#1565C0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SignUpMode, Path=IsChecked}" Value="True">
                                            <Setter Property="Content" Value="新規登録"/>
                                            <Setter Property="Command" Value="{Binding SignUpWithEmailCommand}"/>
                                            <Setter Property="CommandParameter" Value="{Binding ElementName=PasswordBox}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Password Reset Button (Reset Mode) -->
                        <Button Height="50"
                               Background="#FF9800"
                               Foreground="White"
                               Content="パスワードリセットメールを送信"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding ResetPasswordCommand}"
                               Visibility="{Binding IsPasswordResetMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                               IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="6"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F57C00"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#E65100"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Forgot Password Link -->
                        <TextBlock HorizontalAlignment="Center"
                                  Margin="0,15,0,0"
                                  Visibility="{Binding IsPasswordResetMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <Hyperlink Command="{Binding TogglePasswordResetModeCommand}"
                                      TextDecorations="None"
                                      Foreground="#2196F3">
                                <Run Text="パスワードを忘れた場合"/>
                            </Hyperlink>
                        </TextBlock>

                        <!-- Cancel Password Reset Link -->
                        <TextBlock HorizontalAlignment="Center"
                                  Margin="0,15,0,0"
                                  Visibility="{Binding IsPasswordResetMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Hyperlink Command="{Binding CancelPasswordResetCommand}"
                                      TextDecorations="None"
                                      Foreground="#666666">
                                <Run Text="サインインに戻る"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Grid Margin="0,0,0,20"
                      Visibility="{Binding IsPasswordResetMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                           BorderBrush="#CCCCCC"
                           BorderThickness="0,0,0,1"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
                    <TextBlock Grid.Column="1"
                              Text="または"
                              Foreground="#999999"
                              FontSize="14"/>
                    <Border Grid.Column="2"
                           BorderBrush="#CCCCCC"
                           BorderThickness="0,0,0,1"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
                </Grid>

                <!-- GitHub Authentication Section -->
                <Border Background="White"
                       CornerRadius="8"
                       Padding="25,20"
                       BorderBrush="#DDDDDD"
                       BorderThickness="1"
                       Margin="0,0,0,20"
                       Visibility="{Binding IsPasswordResetMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="ソーシャルアカウントでサインイン"
                                  TextAlignment="Center"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>

                        <!-- GitHub Sign In Button -->
                        <Button Height="50"
                               Background="#24292E"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Cursor="Hand"
                               Command="{Binding SignInWithGitHubCommand}"
                               IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="6"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                    <StackPanel Orientation="Horizontal"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center">
                                                        <!-- GitHub Icon (SVG Path) -->
                                                        <Path Data="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
                                                              Fill="White"
                                                              Width="20"
                                                              Height="20"
                                                              Stretch="Uniform"
                                                              Margin="0,0,10,0"/>
                                                        <TextBlock Text="GitHubでサインイン"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="White"
                                                                  FontSize="16"
                                                                  FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2F363D"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#1B1F23"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                          Foreground="#2196F3"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,20,0,0"
                          FontSize="14"
                          Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,10,0,0"
                          FontSize="14"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True"
                           Height="4"
                           Margin="0,20,0,0"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
               Background="#EEEEEE" 
               Padding="10">
            <TextBlock Text="© 2025 KANAMORI SYSTEM Inc." 
                      HorizontalAlignment="Center"
                      Foreground="#666666"
                      FontSize="11"/>
        </Border>
    </Grid>
</Window>
