<Window x:Class="KdxDesigner.Views.Interlock.InterlockPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="インターロックプロパティ" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="インターロックプロパティ" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- シリンダー (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="シリンダー:"/>
                    <TextBox Grid.Column="1" Text="{Binding CylinderDisplayName}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- ソートID (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="ソートID:"/>
                    <TextBox Grid.Column="1" Text="{Binding SortId}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- PLC ID (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="PLC ID:"/>
                    <TextBox Grid.Column="1" Text="{Binding PlcId}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- 条件シリンダー -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="条件シリンダー:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Cylinders}"
                              SelectedValue="{Binding ConditionCylinderId}"
                              SelectedValuePath="Id">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding CYNum}"/>
                                    <Run Text=" - " Foreground="Gray"/>
                                    <Run Text="{Binding PUCO}" Foreground="Gray"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- 前提条件1 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="前提条件1:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding PreConditions1}"
                              SelectedValue="{Binding PreConditionID1}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="ConditionName"/>
                </Grid>

                <!-- 前提条件2 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="前提条件2:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding PreConditions2}"
                              SelectedValue="{Binding PreConditionID2}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="InterlockMode"/>
                </Grid>

                <!-- 前提条件3 (IO/デバイスON条件) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="前提条件3:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding PreConditions3}"
                              SelectedValue="{Binding PreConditionID3}"
                              SelectedValuePath="Id">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding ConditionType}"/>
                                    <Run Text=": " Foreground="Gray"/>
                                    <Run Text="{Binding IOAddress}" Foreground="Blue"/>
                                    <Run Text="{Binding DeviceAddress}" Foreground="Green"/>
                                    <Run Text=" (" Foreground="Gray"/>
                                    <Run Text="{Binding Description}" Foreground="Gray"/>
                                    <Run Text=")" Foreground="Gray"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- 行きor帰り -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="行き/帰り:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding GoOrBackOptions}"
                              SelectedValue="{Binding GoOrBack}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="DisplayName"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Width="80" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="キャンセル" Width="80" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
