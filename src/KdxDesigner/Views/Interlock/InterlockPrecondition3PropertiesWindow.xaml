<Window x:Class="KdxDesigner.Views.Interlock.InterlockPrecondition3PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="前提条件3 プロパティ" Height="300" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="前提条件3 (IO/デバイスON条件)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <!-- 条件タイプ -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="条件タイプ:"/>
                <ComboBox Grid.Column="1" SelectedValue="{Binding ConditionType}">
                    <sys:String>IO</sys:String>
                    <sys:String>Device</sys:String>
                </ComboBox>
            </Grid>

            <!-- IOアドレス -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="IOアドレス:"/>
                <TextBox Grid.Column="1" Text="{Binding IoAddress, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Grid.Column="2" Content="IO検索" Command="{Binding SearchIOCommand}" Margin="5,0,0,0" Padding="10,2"/>
            </Grid>

            <!-- デバイスアドレス -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="デバイスアドレス:"/>
                <TextBox Grid.Column="1" Text="{Binding DeviceAddress, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <!-- ON条件 -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="ON条件:"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding IsOnCondition}" VerticalAlignment="Center"/>
            </Grid>

            <!-- 説明 -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="説明:"/>
                <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="5" Command="{Binding OkCommand}" IsDefault="True"/>
            <Button Content="キャンセル" Width="80" Margin="5" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
