<Window x:Class="KdxDesigner.Views.Interlock.InterlockPreConditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="インターロック前提条件設定" Height="700" Width="900">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" FontWeight="Bold" Text="インターロック前提条件設定"/>
                <TextBlock FontSize="12" Margin="20,3,0,0" Foreground="Gray"
                           Text="※ 緑色の枠は、このInterlockに適用される条件です"/>
            </StackPanel>
        </Border>

        <!-- PreCondition1 Section -->
        <GroupBox Grid.Row="1" Margin="10" Height="150">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="前提条件1 (InterlockPrecondition1)" VerticalAlignment="Center"/>
                    <Border Background="#4CAF50" CornerRadius="10" Padding="8,2" Margin="10,0,0,0"
                            Visibility="{Binding IsPreCondition1Selected, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="適用中" Foreground="White" FontSize="11" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- PreCondition1 List -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ToolBar Grid.Row="0">
                        <Button Content="新規" Command="{Binding AddPreCondition1Command}"/>
                        <Button Content="削除" Command="{Binding DeletePreCondition1Command}"/>
                    </ToolBar>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding PreCondition1List}"
                              SelectedItem="{Binding SelectedPreCondition1}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="条件名" Binding="{Binding ConditionName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- PreCondition1 Details -->
                <Border Grid.Column="1" Margin="10,0,0,0" Padding="10" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPreCondition1Selected}" Value="True">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <CheckBox Content="この条件を適用する"
                                      IsChecked="{Binding IsPreCondition1Selected}"
                                      FontWeight="Bold" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="条件名:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding SelectedPreCondition1.ConditionName}" Margin="5,2"/>
                        </Grid>

                        <Grid Grid.Row="2" Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="説明:" VerticalAlignment="Top"/>
                            <TextBox Grid.Column="1" Text="{Binding SelectedPreCondition1.Description}"
                                     TextWrapping="Wrap" AcceptsReturn="True" MinHeight="30" Margin="5,2"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <!-- PreCondition2 Section (選択のみ) -->
        <GroupBox Grid.Row="2" Margin="10,0,10,10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="前提条件2 (InterlockPrecondition2) - ProcessDetail選択" VerticalAlignment="Center"/>
                    <Border Background="#4CAF50" CornerRadius="10" Padding="8,2" Margin="10,0,0,0"
                            Visibility="{Binding IsPreCondition2Selected, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="適用中" Foreground="White" FontSize="11" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ToolBar -->
                <ToolBar Grid.Row="0">
                    <Button Content="新規" Command="{Binding AddPreCondition2Command}"/>
                    <Button Content="編集" Command="{Binding EditPreCondition2Command}"/>
                    <Button Content="削除" Command="{Binding DeletePreCondition2Command}"/>
                </ToolBar>

                <!-- PreCondition2 List -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding PreCondition2List}"
                          SelectedItem="{Binding SelectedPreCondition2}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="モード" Binding="{Binding InterlockMode}" Width="100"/>
                        <DataGridCheckBoxColumn Header="プロセス有効" Binding="{Binding IsEnableProcess}" Width="80"/>
                        <DataGridTextColumn Header="開始DetailId" Binding="{Binding StartDetailId}" Width="90"/>
                        <DataGridTextColumn Header="終了DetailId" Binding="{Binding EndDetailId}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 選択状態表示 -->
                <Border Grid.Row="2" Padding="10" Margin="0,5,0,0" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPreCondition2Selected}" Value="True">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="この条件を適用する"
                                  IsChecked="{Binding IsPreCondition2Selected}"
                                  FontWeight="Bold" VerticalAlignment="Center" FontSize="13"/>
                        <TextBlock Text="  |  選択中: " Margin="20,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedPreCondition2.InterlockMode, FallbackValue='(リストから選択してください)'}"
                                   FontWeight="Bold" Foreground="Blue" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- PreCondition3 Section (選択のみ) -->
        <GroupBox Grid.Row="3" Margin="10,0,10,10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="前提条件3 (InterlockPrecondition3) - IO/デバイスON条件" VerticalAlignment="Center"/>
                    <Border Background="#4CAF50" CornerRadius="10" Padding="8,2" Margin="10,0,0,0"
                            Visibility="{Binding IsPreCondition3Selected, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                        <TextBlock Text="適用中" Foreground="White" FontSize="11" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ToolBar -->
                <ToolBar Grid.Row="0">
                    <Button Content="新規" Command="{Binding AddPreCondition3Command}"/>
                    <Button Content="編集" Command="{Binding EditPreCondition3Command}"/>
                    <Button Content="削除" Command="{Binding DeletePreCondition3Command}"/>
                </ToolBar>

                <!-- PreCondition3 List -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding PreCondition3List}"
                          SelectedItem="{Binding SelectedPreCondition3}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="タイプ" Binding="{Binding ConditionType}" Width="60"/>
                        <DataGridTextColumn Header="IOアドレス" Binding="{Binding IOAddress}" Width="100"/>
                        <DataGridTextColumn Header="デバイス" Binding="{Binding DeviceAddress}" Width="100"/>
                        <DataGridCheckBoxColumn Header="ON条件" Binding="{Binding IsOnCondition}" Width="60"/>
                        <DataGridTextColumn Header="説明" Binding="{Binding Description}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 選択状態表示 -->
                <Border Grid.Row="2" Padding="10" Margin="0,5,0,0" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPreCondition3Selected}" Value="True">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="この条件を適用する"
                                  IsChecked="{Binding IsPreCondition3Selected}"
                                  FontWeight="Bold" VerticalAlignment="Center" FontSize="13"/>
                        <TextBlock Text="  |  選択中: " Margin="20,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedPreCondition3.ConditionType, FallbackValue='(リストから選択してください)'}"
                                   FontWeight="Bold" Foreground="Blue" VerticalAlignment="Center"/>
                        <TextBlock Text=": " VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedPreCondition3.IOAddress}"
                                   Foreground="Green" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedPreCondition3.DeviceAddress}"
                                   Foreground="Green" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="保存" Width="100" Height="30" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="キャンセル" Width="100" Height="30" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>