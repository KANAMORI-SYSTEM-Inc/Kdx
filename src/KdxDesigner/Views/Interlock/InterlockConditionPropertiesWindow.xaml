<Window x:Class="KdxDesigner.Views.Interlock.InterlockConditionPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="インターロック条件プロパティ" Height="650" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="インターロック条件プロパティ" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 紐づくインターロック情報 -->
                <Border Background="#E8F4FD" BorderBrush="#0078D4" BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="紐づくインターロック (複合キー)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Interlock.CylinderId:"/>
                            <TextBlock Grid.Column="1" Text="{Binding CylinderId}" FontWeight="Bold"/>
                        </Grid>
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Interlock.SortId:"/>
                            <TextBlock Grid.Column="1" Text="{Binding InterlockSortId}" FontWeight="Bold"/>
                        </Grid>
                        <TextBlock Text="※ この条件は上記の複合キーを持つInterlockに紐づいています"
                                   FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- シリンダーID (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="シリンダーID:"/>
                    <TextBox Grid.Column="1" Text="{Binding CylinderId}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- インターロックソートID (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="インターロックソートID:"/>
                    <TextBox Grid.Column="1" Text="{Binding InterlockSortId}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- 条件番号 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="条件番号:"/>
                    <TextBox Grid.Column="1" Text="{Binding ConditionNumber, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- 条件タイプ -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="条件タイプ:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding ConditionTypes}"
                              SelectedValue="{Binding ConditionTypeId}"
                              SelectedValuePath="Id">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding ConditionTypeName}"/>
                                    <Run Text=" - " Foreground="Gray"/>
                                    <Run Text="{Binding Description}" Foreground="Gray"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- 名前 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="名前:"/>
                    <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- デバイス -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="デバイス:"/>
                    <TextBox Grid.Column="1" Text="{Binding Device, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- ON条件 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="ON条件:"/>
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsOnCondition}" VerticalAlignment="Center"/>
                </Grid>

                <!-- コメント1 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="コメント1:"/>
                    <TextBox Grid.Column="1" Text="{Binding Comment1, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>
                </Grid>

                <!-- コメント2 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="コメント2:"/>
                    <TextBox Grid.Column="1" Text="{Binding Comment2, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Width="80" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="キャンセル" Width="80" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
